-- StudiosLib UI Library
-- Inspired by Rayfield, created for premium experience.

local StudiosLib = {}
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Internal helper for creating modern UI elements
local function create(className, properties)
    local instance = Instance.new(className)
    for i, v in pairs(properties) do
        if i ~= "Parent" then
            instance[i] = v
        end
    end
    instance.Parent = properties.Parent
    return instance
end

function StudiosLib:CreateWindow(options)
    local WindowName = options.Name or "StudiosLib"
    local LoadingTitle = options.LoadingTitle or "Studios Raw"
    local LoadingSubtitle = options.LoadingSubtitle or "by Antigravity"
    local KeyEnabled = options.KeySystem or false
    local Keys = options.Keys or {}
    if type(Keys) == "string" then Keys = {Keys} end -- Allow single string as key

    local MainGui = create("ScreenGui", {
        Name = "StudiosLib",
        Parent = CoreGui,
        ResetOnSpawn = false
    })

    -- Key System Implementation
    if KeyEnabled then
        local KeyWindow = create("Frame", {
            Name = "KeyWindow",
            Parent = MainGui,
            Size = UDim2.new(0, 300, 0, 150),
            Position = UDim2.new(0.5, -150, 0.5, -75),
            BackgroundColor3 = Color3.fromRGB(20, 20, 20),
            BorderSizePixel = 0
        })
        create("UICorner", {CornerRadius = UDim.new(0, 8), Parent = KeyWindow})

        create("TextLabel", {
            Parent = KeyWindow,
            Text = "Key System",
            Size = UDim2.new(1, 0, 0, 40),
            BackgroundTransparency = 1,
            TextColor3 = Color3.fromRGB(255, 255, 255),
            Font = Enum.Font.GothamBold,
            TextSize = 18
        })

        local KeyInput = create("TextBox", {
            Parent = KeyWindow,
            PlaceholderText = "Enter Key Here...",
            Size = UDim2.new(0.8, 0, 0, 35),
            Position = UDim2.new(0.1, 0, 0.4, 0),
            BackgroundColor3 = Color3.fromRGB(30, 30, 30),
            TextColor3 = Color3.fromRGB(255, 255, 255),
            BorderSizePixel = 0
        })
        create("UICorner", {CornerRadius = UDim.new(0, 6), Parent = KeyInput})

        local SubmitBtn = create("TextButton", {
            Parent = KeyWindow,
            Text = "Unlock",
            Size = UDim2.new(0.8, 0, 0, 35),
            Position = UDim2.new(0.1, 0, 0.7, 0),
            BackgroundColor3 = Color3.fromRGB(45, 100, 180),
            TextColor3 = Color3.fromRGB(255, 255, 255),
            Font = Enum.Font.GothamBold,
            BorderSizePixel = 0
        })
        create("UICorner", {CornerRadius = UDim.new(0, 6), Parent = SubmitBtn})

        local keyResolved = false
        SubmitBtn.MouseButton1Click:Connect(function()
            local input = KeyInput.Text
            local found = false
            for _, k in pairs(Keys) do
                if input == k then
                    found = true
                    break
                end
            end

            if found then
                keyResolved = true
                KeyWindow:Destroy()
            else
                KeyInput.Text = ""
                KeyInput.PlaceholderText = "Wrong Key!"
            end
        end)

        repeat task.wait() until keyResolved
    end

    -- Main UI Construction
    local MainFrame = create("Frame", {
        Name = "MainFrame",
        Parent = MainGui,
        Size = UDim2.new(0, 500, 0, 350),
        Position = UDim2.new(0.5, -250, 0.5, -175),
        BackgroundColor3 = Color3.fromRGB(15, 15, 15),
        BorderSizePixel = 0,
        ClipsDescendants = true
    })
    create("UICorner", {CornerRadius = UDim.new(0, 10), Parent = MainFrame})

    local Sidebar = create("Frame", {
        Name = "Sidebar",
        Parent = MainFrame,
        Size = UDim2.new(0, 150, 1, 0),
        BackgroundColor3 = Color3.fromRGB(20, 20, 20),
        BorderSizePixel = 0
    })
    create("UICorner", {CornerRadius = UDim.new(0, 10), Parent = Sidebar})

    local Title = create("TextLabel", {
        Parent = Sidebar,
        Text = WindowName,
        Size = UDim2.new(1, 0, 0, 50),
        BackgroundTransparency = 1,
        TextColor3 = Color3.fromRGB(255, 255, 255),
        Font = Enum.Font.GothamBold,
        TextSize = 20
    })

    local Container = create("Frame", {
        Name = "Container",
        Parent = MainFrame,
        Position = UDim2.new(0, 160, 0, 10),
        Size = UDim2.new(1, -170, 1, -20),
        BackgroundTransparency = 1
    })

    local TabButtonsContainer = create("ScrollingFrame", {
        Parent = Sidebar,
        Position = UDim2.new(0, 0, 0, 55),
        Size = UDim2.new(1, 0, 1, -60),
        BackgroundTransparency = 1,
        ScrollBarThickness = 0
    })
    create("UIListLayout", {Parent = TabButtonsContainer, Padding = UDim.new(0, 5)})

    -- Dragging Logic
    local dragging, dragInput, dragStart, startPos
    MainFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    local Window = {}

    function Window:CreateTab(name)
        local TabFrame = create("ScrollingFrame", {
            Name = name .. "Tab",
            Parent = Container,
            Size = UDim2.new(1, 0, 1, 0),
            BackgroundTransparency = 1,
            ScrollBarThickness = 2,
            Visible = false
        })
        create("UIListLayout", {Parent = TabFrame, Padding = UDim.new(0, 8)})

        local TabBtn = create("TextButton", {
            Parent = TabButtonsContainer,
            Size = UDim2.new(0.9, 0, 0, 35),
            BackgroundColor3 = Color3.fromRGB(25, 25, 25),
            Text = name,
            TextColor3 = Color3.fromRGB(200, 200, 200),
            Font = Enum.Font.Gotham,
            TextSize = 14
        })
        create("UICorner", {CornerRadius = UDim.new(0, 6), Parent = TabBtn})

        TabBtn.MouseButton1Click:Connect(function()
            for _, child in pairs(Container:GetChildren()) do
                child.Visible = false
            end
            TabFrame.Visible = true
        end)

        -- Initial Visibility
        if #TabButtonsContainer:GetChildren() == 2 then -- UIListLayout + 1st Button
            TabFrame.Visible = true
        end

        local Tab = {}

        function Tab:CreateButton(options)
            local btnName = options.Name or "Button"
            local callback = options.Callback or function() end

            local BtnFrame = create("TextButton", {
                Parent = TabFrame,
                Size = UDim2.new(1, 0, 0, 40),
                BackgroundColor3 = Color3.fromRGB(30, 30, 30),
                Text = btnName,
                TextColor3 = Color3.fromRGB(255, 255, 255),
                Font = Enum.Font.Gotham,
                TextSize = 14,
                AutoButtonColor = true
            })
            create("UICorner", {CornerRadius = UDim.new(0, 6), Parent = BtnFrame})

            BtnFrame.MouseButton1Click:Connect(function()
                callback()
                -- Simple pulse effect
                local tween = TweenService:Create(BtnFrame, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(45, 45, 45)})
                tween:Play()
                tween.Completed:Connect(function()
                    TweenService:Create(BtnFrame, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(30, 30, 30)}):Play()
                end)
            end)

            return BtnFrame
        end

        function Tab:CreateToggle(options)
            local toggleName = options.Name or "Toggle"
            local default = options.CurrentValue or false
            local callback = options.Callback or function() end

            local ToggleFrame = create("Frame", {
                Parent = TabFrame,
                Size = UDim2.new(1, 0, 0, 45),
                BackgroundColor3 = Color3.fromRGB(25, 25, 25),
                BorderSizePixel = 0
            })
            create("UICorner", {CornerRadius = UDim.new(0, 6), Parent = ToggleFrame})

            create("TextLabel", {
                Parent = ToggleFrame,
                Text = toggleName,
                Size = UDim2.new(0.7, 0, 1, 0),
                Position = UDim2.new(0.05, 0, 0, 0),
                BackgroundTransparency = 1,
                TextColor3 = Color3.fromRGB(200, 200, 200),
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextSize = 14
            })

            local Switch = create("TextButton", {
                Parent = ToggleFrame,
                Size = UDim2.new(0, 40, 0, 20),
                Position = UDim2.new(0.85, 0, 0.5, -10),
                BackgroundColor3 = default and Color3.fromRGB(45, 100, 180) or Color3.fromRGB(60, 60, 60),
                Text = ""
            })
            create("UICorner", {CornerRadius = UDim.new(1, 0), Parent = Switch})

            local state = default
            Switch.MouseButton1Click:Connect(function()
                state = not state
                callback(state)
                TweenService:Create(Switch, TweenInfo.new(0.3), {
                    BackgroundColor3 = state and Color3.fromRGB(45, 100, 180) or Color3.fromRGB(60, 60, 60)
                }):Play()
            end)
        end

        return Tab
    end

    return Window
end

return StudiosLib
